---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Descubre nuestra clínica de odontología y ortodoncia especializada en tratamientos dentales como brackets, implantes y blanqueamiento dental. ¡Sonríe con confianza!" />
    <meta name="keywords" content="odontología, ortodoncia, clínica dental, brackets, implantes dentales, limpieza dental, blanqueamiento dental, salud bucal" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="Clínica de Odontología y Ortodoncia - {title}" />
    <meta property="og:description" content="Transforma tu sonrisa con nuestros tratamientos dentales especializados. ¡Visítanos y cuida tu salud bucal!" />
    <meta property="og:image" content="/img/logo.webp" />
    <meta property="og:url" content="https://dentsalud93.online" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Clínica de Odontología y Ortodoncia" />
    <meta name="twitter:description" content="Tratamientos dentales especializados para una sonrisa perfecta. Visítanos y cuida tu salud bucal con expertos." />
    <meta name="twitter:image" content="/img/odontologia-clinica.webp" />
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Dentist",
      "name": "Clínica Dental Sonrisa Perfecta",
      "description": "Clínica especializada en odontología y ortodoncia. Ofrecemos servicios como implantes dentales, blanqueamiento, limpieza y tratamientos de ortodoncia.",
      "image": "https://img/logo.webp",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Carrera 24 #06-36 sue",
        "addressLocality": "Bogota",
        "addressRegion": "Bogota",
        "postalCode": "11114",
        "addressCountry": "CO"
      },
      "telephone": "+57 3214586443",
      "url": "https://dentsalud93.online",
      "priceRange": "$60.000",
      "openingHours": "Mo-Sa 09:00-18:00",
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 4.710989,
        "longitude": -74.072092
      }
    }
    </script>
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" />
    <link rel="icon" href="/img/logo.webp" type="image/x-icon">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0">
    <title>{title} | Clínica de Odontología y Ortodoncia Especializada</title>
  </head>
  <body>
    <slot />
    
    <script is:inline src="/js/main.js"></script>
    <script is:inline src="/js/animate.js"></script>
    <script is:inline src="https://kit.fontawesome.com/db59255a97.js" crossorigin="anonymous"></script>
  </body>
</html>
